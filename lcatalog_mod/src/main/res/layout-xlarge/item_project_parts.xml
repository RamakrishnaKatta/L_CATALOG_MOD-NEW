<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_6"
    app:cardBackgroundColor="@color/primary_dark"
    app:cardCornerRadius="@dimen/margin_6">

    <RelativeLayout
        android:id="@+id/project_part_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/project_part_item_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/project_part_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_200"
                android:adjustViewBounds="true"
                android:contentDescription="@string/company_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/project_part_name_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_part_item_image_layout"
            android:background="@color/white">

            <TextView
                android:id="@+id/project_part_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/overlock_sc"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/margin_6"
                android:text="@string/catalog_title"
                android:textColor="@color/primary_darker"
                android:textSize="@dimen/text_tab_large"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/project_part_description_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/project_part_name_area"
            android:background="@color/primary_dark"
            android:gravity="center">

            <TextView
                android:id="@+id/project_part_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:fontFamily="@font/assistant_semibold"
                android:gravity="center"
                android:maxLength="80"
                android:maxLines="2"
                android:padding="@dimen/margin_6"
                android:text="@string/catalog_description"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tab_small"
                android:textStyle="italic" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>