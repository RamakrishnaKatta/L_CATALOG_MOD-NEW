<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_layout_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/margin_300"
            android:layout_height="@dimen/margin_300"
            android:layout_gravity="center"
            android:contentDescription="@string/company_icon"
            android:padding="@dimen/margin_20"
            android:src="@drawable/companyicon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_welcome_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graduate"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="70sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_40"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

            <TextView
                android:id="@+id/txt_welcome_12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cookie"
                android:text="@string/powered_by"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tab_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_welcome_13"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/graduate"
                android:text="@string/company_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tab_44"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_welcome_14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cookie"
                android:text="@string/tag_line"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_tab_xlarge" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>